{"components/blog/single-post":"<div class=\"container\">\r\n    <div class=\"single-blog\">\r\n    <article class=\"blog allblog row\">\r\n    <div class=\"blog-post-figure col-sm-6 col-12 sing-blog\" style=\"display:none;\">\r\n        {{#if post.thumbnail}}\r\n            <figure class=\"blog-thumbnail\">\r\n                <a href=\"{{post.url}}\">\r\n                    <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage post.thumbnail 'blog_size'}}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\r\n                </a>\r\n            </figure>\r\n        {{/if}}\r\n    </div>\r\n    <div class=\"blog-post-body\">\r\n        <header class=\"blog-header\">\r\n            <h1 class=\"blog-title\">\r\n                {{post.title}}\r\n            </h1>\r\n            <p class=\"blog-date\">{{#if post.author}}{{lang 'blog.posted_by' name=post.author}} on {{/if}}{{post.date_published}}</p>\r\n        </header>\r\n\r\n        <div class=\"blog-post\">\r\n            {{#if post.body}}\r\n                {{{post.body}}}\r\n            {{else}}\r\n                <div class=\"allb-post\">{{post.summary}}<span>&hellip;</span></div>\r\n                {{#if post.show_read_more}}\r\n                    <div class=\"bread\"><a href=\"{{url}}\" class=\"button button--primary\">read more</a></div>\r\n                {{/if}}\r\n            {{/if}}\r\n        </div>\r\n\r\n\r\n        {{#if show_tags}}\r\n            {{#if post.tags}}\r\n                <ul class=\"tags\">\r\n                    {{#each post.tags}}\r\n                    <li class=\"tag\">\r\n                        <a href=\"{{url}}\">{{name}}</a>\r\n                    </li>\r\n                    {{/each}}\r\n                </ul>\r\n            {{/if}}\r\n        {{/if}}\r\n        {{>components/common/share}}\r\n    </div> \r\n    </article>\r\n</div>\r\n</div>","components/common/share":"{{#if settings.add_this.buttons}}\n    {{assignVar 'encodedUrl' (encodeURI url)}}\n    {{assignVar 'encodedTitle' (encodeURI head.title)}}\n        <ul class=\"socialLinks\">\n            {{#each settings.add_this.buttons}}\n                <li class=\"socialLinks-item socialLinks-item--{{service}}\">\n                    {{#if service '===' 'facebook'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       title=\"{{{capitalize service}}}\"\n                       href=\"https://facebook.com/sharer/sharer.php?u={{getVar 'encodedUrl'}}\"\n                       target=\"_blank\"\n                       rel=\"noopener\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-facebook\"/>\n                        </svg>\n                    </a>\n                    {{else if service '===' 'email'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       title=\"{{{capitalize service}}}\"\n                       href=\"mailto:?subject={{getVar 'encodedTitle'}}&amp;body={{getVar 'encodedUrl'}}\"\n                       target=\"_self\"\n                       rel=\"noopener\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-envelope\"/>\n                        </svg>\n                    </a>\n                    {{else if service '===' 'print'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       title=\"{{{capitalize service}}}\"\n                       onclick=\"window.print();return false;\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-print\"/>\n                        </svg>\n                    </a>\n                    {{else if service '===' 'twitter'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       href=\"https://twitter.com/intent/tweet/?text={{getVar 'encodedTitle'}}&amp;url={{getVar 'encodedUrl'}}\"\n                       target=\"_blank\"\n                       rel=\"noopener\"\n                       title=\"{{{capitalize service}}}\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-twitter\"/>\n                        </svg>\n                    </a>\n                    {{else if service '===' 'linkedin'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       title=\"{{{capitalize service}}}\"\n                       href=\"https://www.linkedin.com/shareArticle?mini=true&amp;url={{getVar 'encodedUrl'}}&amp;title={{getVar 'encodedTitle'}}&amp;summary={{getVar 'encodedTitle'}}&amp;source={{getVar 'encodedUrl'}}\"\n                       target=\"_blank\"\n                       rel=\"noopener\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-linkedin\"/>\n                        </svg>\n                    </a>\n                    {{else if service '===' 'pinterest'}}\n                    <a class=\"socialLinks__link icon icon--{{service}}\"\n                       title=\"{{{capitalize service}}}\"\n                        href=\"https://pinterest.com/pin/create/button/?url={{getVar 'encodedUrl'}}&amp;media={{getImageSrcset ../product.main_image (cdn ../theme_settings.default_image_product) 1x=../theme_settings.zoom_size}}&amp;description={{getVar 'encodedTitle'}}\"\n                       target=\"_blank\"\n                       rel=\"noopener\"\n                       {{{annotation}}}\n\n                       target=\"_blank\"\n                       rel=\"noopener\"\n                       {{{annotation}}}\n                    >\n                        <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                        <svg>\n                            <use xlink:href=\"#icon-pinterest\"/>\n                        </svg>\n                    </a>\n                    {{/if}}\n                </li>\n            {{/each}}\n        </ul>\n{{/if}}\n{{#if settings.facebook_like_button.enabled}}\n    <iframe\n        class=\"facebook{{#if settings.facebook_like_button.verb '===' 'recommend'}}Recommend{{else}}Like{{/if}}Btn\"\n        style=\"border:none; overflow:hidden; margin: 0; padding: 0; position:absolute\"\n        src=\"https://www.facebook.com/plugins/like.php?href={{settings.facebook_like_button.href}}&amp;layout=button_count{{#if settings.facebook_like_button.verb '===' 'recommend'}}&amp;action=recommend{{/if}}&amp;colorscheme=light&amp;height=20\"\n        scrolling=\"no\"\n        frameborder=\"0\"\n        allowTransparency=\"true\">\n    </iframe>\n{{/if}}\n"}
